
<% content_for :body do %>
  <div class="list">
    <div class="listTitle">
      Recent Quotes
    </div>
    <ul>
      <% @quotes.each do |quote| %>
        <li>
          <div class='content'><%= quote.content %></div>
          <div class='book'><%= quote.book %></div>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<% content_for :footer do %>
  <div class="add"><%= link_to 'Add New Quote', :controller => 'home', :action => 'create' %></div>
<% end %>
    
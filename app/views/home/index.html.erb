
<% content_for :body do %>
  <div class="list">
    <div class="listTitle">
      Recent Quotes
    </div>
    <ul>
      <% @quotes.each do |quote| %>
        <li>
          <div class='content'><%= quote.content %></div>
          <div class='book'><%= quote.book %></div>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<% content_for :footer do %>
  <div class="add">Add New Quote</div>
    <script>
  $(function() {
    $('.add').on('click', function (e) {
      window.location.replace("<%= url_for :controller => 'home', :action => 'create' %>")
    })
  });
  </script>
<% end %>
    
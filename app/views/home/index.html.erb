<div class="create left">
  
  <%= form_tag({ :action => :save }, { :method => :post }) do %>

    <div class="book">
      <span>Share your quote :</span>
      <%= text_field "quote", "book", :size => 500, :class => "book", :placeholder => "from the book ..." %>
    </div>

    <div><%= text_area "quote", "content", :rows => 5, :class => "content", :placeholder => "it says the quote ..." %></div>

    <div class="submit">
      <%= submit_tag("Share") %>
    </div>

  <% end %>
</div>

<div class="list">
  <div class="listTitle">
    Recent Quotes
  </div>
  <ul>
  <% @quotes.each do |quote| %>
      <li>
        <div class='content'><%= quote.content %></div>
        <div class='book'><%= quote.book %></div>
      </li>
  <% end %>
  </ul>
</div>
<script>
$(function() {
  setAutoComplete()
  setInterval(function() { observeValue(); }, 100)
  $('.create form').on('submit', formValidator) 
});
</script>
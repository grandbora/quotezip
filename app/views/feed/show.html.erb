<% content_for :meta do %>
  <meta property="og:title" content="Quote from <%= @quote.book %>"/>
  <meta property="og:description" content="<%= social_share_description(@quote) -%>"/>
<% end %>

<% content_for :body do %>
  <div class="list">
    <ul>
      <li>
        <div>
          <%= render partial: "partial/single_quote", locals: {quote: @quote} %>
        </div>
      </li>
    </ul>
  </div>
<% end %>

<% content_for :body do %>
  <div class="list">
    <div class="listTitle">
      Recent Quotes
    </div>
    <ul>
      <% @quotes.each do |quote| %>
        <li>
          <div>
            <a href="/<%= quote.id -%>">
              <div class='content'><%= quote.content %></div>
              <div class='book'><%= quote.book %></div>
              <div class='bottom_menu'>
                <% if quote.user.include? current_user %>
                  <div class='favorited'>favorited</div>
                <% else %>
                  <%= form_for :vote, url: votes_path, html: {class: "favorite_button"} do |f| %>
                    <%= f.hidden_field :quote_id, :value => quote.id %>
                    <%= f.submit "favorite" %>
                  <% end %>
                <% end %>
              </div>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
